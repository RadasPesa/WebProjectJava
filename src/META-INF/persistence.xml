<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="WebDBPU">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>pesa.db.model.WebUserEntity</class>
        <class>pesa.db.model.UserRoleEntity</class>
        <class>pesa.db.model.DiscussionEntity</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/WebDatabase"/>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value="sa"/>
        </properties>
    </persistence-unit>
</persistence>
